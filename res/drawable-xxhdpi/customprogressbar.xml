<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
 
    <item android:id="@android:id/background">
       <shape>
           <gradient
                android:startColor="#CCCCCC"
                android:endColor="#0d1522"
                android:angle="270"
           />
           
           <corners 
               android:radius="14dp"
               />
            
           <stroke 
               android:width="1dp"
        	   android:color="#000000"
               />
       </shape>
   </item>

  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="#fa0303"
                android:centerColor="#ffffff"
                android:centerY="1.0"
                android:endColor="#fa8989"
                android:angle="270"
            />
            
           <corners 
               android:radius="14dp"
               />
            
           <stroke 
               android:width="1dp"
        	   android:color="#000000"
               />
        </shape>
    </clip>
    </item>
</layer-list> 